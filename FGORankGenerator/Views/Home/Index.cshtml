@model IEnumerable<FGORankGenerator.Models.ServantModel>;

@{
  ViewData["Title"] = "HOME";
}

<div class="main">
  <p class="message">
    現在のサーヴァント評価を数値で表します。
  </p>
  <p class="message">
    クリックで色分けできるため、所持チェックなどに使えます。
  </p>
  <p class="link">
    参考：<a href="https://appmedia.jp/fategrandorder/1351236" target="_blank">AppMedia -最強サーヴァントランキングまとめ-</a>
  </p>
</div>

<div class="button">
  @using (Html.BeginForm("CsvDownload", "Home", FormMethod.Get))
  {
    <button class="btn btn-primary" value="download" name="download" type="submit">CSVダウンロード</button>
  }
</div>


