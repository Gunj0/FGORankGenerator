<table class="table table-striped table-hover table-sm table-responsive">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No.</th>
      <th scope="col">名</th>
      <th scope="col">星</th>
      <th scope="col">種</th>
      <th scope="col">色</th>
      <th scope="col">範</th>
      <th scope="col">総</th>
      <th scope="col">攻</th>
      <th scope="col">周</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var servant in Model){
    <tr class="data" id="@servant.Id">
      @*<td style="display:none"><input type="checkbox" /></td>*@
      <td scope="row">@servant.Id</td>
      <td>@servant.Name</td>
      <td>@servant.Rarity</td>
      <td>@servant.Class</td>
      <td>@servant.Type</td>
      <td>@servant.Range</td>
      <td>@servant.OverallRank</td>
      <td>@servant.AppMediaRate</td>
      <td>@servant.AppMediaOrbit</td>
    </tr>
  }
  </tbody>
</table>

