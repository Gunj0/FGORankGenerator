<table class="table table-striped table-hover table-sm table-responsive">
  <thead class="thead-dark">
    <tr>
      <th style="display:none" scope="col">No.</th>
      <th scope="col">サーヴァント名</th>
      <th scope="col" class="text-center">星</th>
      <th scope="col" class="text-center">種</th>
      <th scope="col" class="text-center">色</th>
      <th scope="col" class="text-center">範</th>
      <th scope="col" class="text-center">周</th>
      <th scope="col" class="text-center">攻</th>
      <th scope="col" class="text-center">総</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var servant in Model)
    {
      <tr class="data" id="@servant.Id">
        @*<td style="display:none"><input type="checkbox" /></td>*@
        <td style="display:none" scope="row">@servant.Id</td>
        <td>@servant.Name</td>
        <td class="text-center">@servant.Rarity</td>
        <td class="text-center">@servant.Class</td>
        <td class="text-center">@servant.Type</td>
        <td class="text-center">@servant.Range</td>
        <td class="text-center">@servant.AppMediaOrbit</td>
        <td class="text-center">@servant.AppMediaRate</td>
        @* 桁を揃える *@
        @{
          var num = "";
          var hoge = servant.OverallRank;
          if (hoge >= 10)
          {
            num = hoge.ToString("F0");
          }
          else
          {
            num = hoge.ToString("F1");
          }
        }
        <td class="text-center">@num</td>
      </tr>
    }
  </tbody>
</table>

